/* Dashboard Styles */
.header {
    text-align: center;
    font-size: 2.5rem;
    margin: 30px 0;
    color: #fff;
    text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.2);
}

.grid-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 25px;
    width: 90%;
    max-width: 1200px;
    margin: 20px auto;
}

.grid-item {
    background-color: #dbc0c0;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
    transition: transform 0.3s, box-shadow 0.3s;
    animation: fadeIn 1.5s ease forwards;
    opacity: 0;
}

@keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
}

.grid-item:hover {
    transform: scale(1.05);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.25);
}

.grid-item img {
    width: 100%;
    height: auto;
    border-bottom: 2px solid #ff7e5f;
}

.grid-item .content {
    padding: 20px;
    text-align: center;
}

.grid-item .content h3 {
    font-size: 1.5rem;
    color: #333;
    margin-bottom: 10px;
}

.grid-item .content p {
    font-size: 1rem;
    color: #555;
    line-height: 1.6;
}

.grid-item .content .btn {
    display: inline-block;
    margin-top: 15px;
    padding: 10px 20px;
    font-size: 1rem;
    background-color: #007bff;
    color: white;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    text-decoration: none;
    transition: background-color 0.3s, transform 0.3s;
}

.grid-item .content .btn:hover {
    background-color: #0056b3;
    transform: scale(1.1);
}


/* Fancy Gradient Section */
.gradient-section {
    background: linear-gradient(to right, #ff7e5f, #feb47b);
    background-color: #feb47b; /* Fallback background color */
    color: white;
    text-align: center;
    padding: 50px 20px;
    margin: 40px 0;
    border-radius: 20px;
    box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
    animation: pulse 3s ease-in-out infinite;
}

@keyframes pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.02); }
}

.gradient-section h2 {
    font-size: 2rem;
    margin-bottom: 20px;
    text-shadow: 1px 1px 5px rgba(0, 0, 0, 0.3);
}

.gradient-section p {
    font-size: 1.2rem;
    line-height: 1.8;
    margin-bottom: 30px;
}

.gradient-section .btn {
    background-color: #fff;
    color: #ff7e5f;
    padding: 12px 30px;
    font-size: 1.1rem;
    border: 2px solid #fff;
    border-radius: 50px;
    text-transform: uppercase;
    font-weight: bold;
    transition: background-color 0.3s, color 0.3s;
}

.gradient-section .btn:hover {
    background-color: #ff7e5f;
    color: white;
}

/* Responsive Styles */
