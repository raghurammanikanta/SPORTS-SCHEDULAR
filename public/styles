/* Global Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Poppins', sans-serif;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    background: radial-gradient(circle, #fffd98, #a0e7e5, #b4f8c8, #f7aef8);
    background-size: 300% 300%;
    animation: gradientBackground 10s ease-in-out infinite alternate;
    color: #333;
}

@keyframes gradientBackground {
    0% { background-position: 0% 0%; }
    25% { background-position: 100% 0%; }
    50% { background-position: 100% 100%; }
    75% { background-position: 0% 100%; }
    100% { background-position: 0% 0%; }
}


h2 {
    margin-bottom: 20px;
    font-weight: 700;
    color: #fff;
}

form {
    display: flex;
    flex-direction: column;
    width: 100%;
    max-width: 400px;
    background: rgba(255, 255, 255, 0.9);
    border-radius: 10px;
    padding: 20px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
}

label {
    margin-bottom: 5px;
    font-weight: 600;
    color: #555;
}

input, textarea, select {
    margin-bottom: 15px;
    padding: 10px;
    border: 2px solid #c4b7b7;
    border-radius: 6px;
    font-size: 1rem;
    transition: border-color 0.3s, background-color 0.3s;
}

input:focus, textarea:focus, select:focus {
    border-color: #a39b99;
    background-color: #fff7f3;
    outline: none;
}

button {
    background-color: #0b7f40;
    color: rgba(58, 0, 0, 0.601);
    border: none;
    padding: 12px;
    border-radius: 6px;
    font-size: 1.1rem;
    cursor: pointer;
    transition: background-color 0.3s, transform 0.2s;
}

button:hover {
    background-color: #0fa450;
    transform: scale(1.05);
}

button:active {
    transform: scale(0.95);
}

a {
    color: #3d3230;
    text-decoration: none;
    font-weight: 600;
    transition: color 0.3s;
    /* background-color: #a39b99; */
}

a:hover {
    color: #155b0b;
    text-decoration: underline;
    text-size-adjust: 20px;
    border-radius: 30%;
}

